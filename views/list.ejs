      <h4 class="ml-2 my-3">To do List</h4>
    <ul class="list-group">
      <%  for(let i=0;i<posts.length;i++){ %>
      
      <li class="list-group-item" data-id="">
        <p>글번호: <%=posts[i]._id%></p>
        <h4>Title: <%=posts[i].title%></h4>
        <p>Due date : <%=posts[i].date%></p>  
        <button class="delete" data-id="<%=posts[i]._id%>">삭제</button>
      </li>
      <%}%>
     
    </ul>


    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.min.js"></script><!-- or  use jquery cdn-->
    <script>
      $('.delete').click(function(e){
        let 글번호=e.target.dataset.id;
        let 지금누른거=$(this);
        $.ajax({
          method:'DELETE',
          url:'/delete',
          data:{_id:글번호}
        }).done(function(결과){

          console.log('성공했습니다');
          지금누른거.parent('li').fadeOut();

        }).fail(function(){
          console.log('실패');
        });
      })
        
    </script>






